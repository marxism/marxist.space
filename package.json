  "main": "index.js",
  "scripts": {
    "build": "./scripts/build.sh",
    "build-db": "./scripts/build-db.sh",
    "clean": "rm -rf node_modules client/node_modules",
    "install-all": "npm ci && cd client && npm ci",
    "lint-db": "yamllint db.yml",
    "prd": "luvi -r public -p 9090 -n",
    "prestart": "npm run build-db",
    "pretest": "npm run build-db",
    "prebuild": "rm -rf docs/",
    "postbuild": "cp -r public docs",
    "start": "cd client && npm start",
    "test": "npm run lint-db && cd client && npm t"
  },
  "homepage": "https://marxist.space",
