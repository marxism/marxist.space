{
  "name": "marxist.space-server",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "start": "NODE_ENV=production PORT=9090 forever start -a -l f.log -e e.log -o o.log index.js",
    "test": "run-s -s test:ts test:lint test:cover",
    "test:cover": "npm run test:jest -- --coverage --no-cache",
    "test:jest": "jest",
    "test:lint": "eslint -c .eslintrc.json src/**/*.ts",
    "test:ts": "tsc --noEmit"
  },
  "homepage": "https://marxist.space",
  "dependencies": {
    "@koa/router": "8.0.8",
    "boring-cluster": "6.0.5",
    "dnscache": "1.0.2",
    "fetchyeah": "3.1.1",
    "forever": "2.0.0",
    "fuse.js": "3.6.1",
    "isomorphic-fetch": "2.2.1",
    "js-yaml": "3.14.0",
    "koa": "2.12.0",
    "koa-mid": "3.1.2",
    "koa-simple-static": "4.0.6",
    "lowdb": "1.0.0",
    "pluralize": "8.0.0"
  },
  "devDependencies": {
    "@types/jest": "25.2.3",
    "@types/js-yaml": "3.12.4",
    "@types/koa": "2.11.3",
    "@types/koa-bodyparser": "4.3.0",
    "@types/koa-compress": "2.0.9",
    "@types/koa__router": "8.0.2",
    "@types/node": "14.0.5",
    "@types/pluralize": "0.0.29",
    "@types/supertest": "2.0.9",
    "coveralls": "3.1.0",
    "eslint": "6.8.0",
    "eslint-plugin-zacanger": "1.1.5",
    "husky": "4.2.5",
    "jest": "25.4.0",
    "lint-staged": "10.2.6",
    "nodemon": "2.0.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "sortpack": "2.1.4",
    "supertest": "4.0.2",
    "ts-jest": "25.4.0",
    "ts-node": "8.10.1",
    "typescript": "3.9.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*.ts",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text",
      "json"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "resetMocks": true,
    "testPathIgnorePatterns": [
      "<rootDir>/(node_modules|lib)/"
    ],
    "testRegex": "\\.test\\.ts$",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --write"
    ],
    "package.json": [
      "sortpack"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
